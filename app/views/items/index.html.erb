<p id="notice"><%= notice %></p>

<h1>Listing  Items</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Image</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.category %></td>
        <td><%= item.name %></td>
        <td><%= image_tag item.image_url %></td>
        <td><%= item.count %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
        <% if member_signed_in? %>
          <% if item.like_member(current_member.id) %>
            <%= image_tag("redheart.png") %>
            <span>
              <%= item.like_count %>
            </span>
          <% else %>
            <%= button_to item_likes_path(item), id: "like-button", remote: true do %>
            <%= image_tag("grayheart.jpeg") %>
            <span>
              <%= item.like_count %>
            </span>
          <% end %>
        <% else %>
          <% = image_tag("grayheart.jpeg") %>
          <span>
            <%= item.like_count %>
          </span>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

