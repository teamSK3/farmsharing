<% @member ||= current_member %>
<div class="stats">
  <a href="<%= following_member_path(@member) %>">
    <strong id="following" class="stat">
      <%= @member.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_member_path(@member) %>">
    <strong id="followers" class="stat">
      <%= @member.followers.count %>
    </strong>
    followers
  </a>
</div>
